{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": ["dom", "es2018", "es6"],
        "outDir": "dist",
        // "rootDir": "*",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "allowUnusedLabels": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "includes": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
